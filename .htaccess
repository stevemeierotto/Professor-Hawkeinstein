# Apache Configuration for AI Educational Platform
# Enable clean URLs and API routing

RewriteEngine On

# =============================================================================
# ARCHITECTURE REDIRECTS (Phase 5/6)
# Redirect root-level URLs to their proper subsystem locations
# Files have been archived - these are permanent redirects now
# See: docs/ARCHITECTURE.md
# =============================================================================

# Course Factory redirects (admin_* URLs -> /course_factory/)
RewriteRule ^admin_(.+)\.html$ /course_factory/admin_$1.html [R=301,L]
RewriteRule ^admin_auth\.js$ /course_factory/admin_auth.js [R=301,L]

# Student Portal redirects
RewriteRule ^login\.html$ /student_portal/login.html [R=301,L]
RewriteRule ^register\.html$ /student_portal/register.html [R=301,L]
RewriteRule ^student_dashboard\.html$ /student_portal/student_dashboard.html [R=301,L]
RewriteRule ^workbook\.html$ /student_portal/workbook.html [R=301,L]
RewriteRule ^course_viewer\.html$ /student_portal/course_viewer.html [R=301,L]
RewriteRule ^quiz\.html$ /student_portal/quiz.html [R=301,L]
RewriteRule ^index\.html$ /student_portal/index.html [R=301,L]

# Root URL -> Student Portal
RewriteRule ^$ /student_portal/ [R=301,L]

# =============================================================================
# END ARCHITECTURE REDIRECTS
# =============================================================================

# Prevent direct access to config and log files
<FilesMatch "(\.log|database\.php)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# API routing - ensure PHP files in api/ are accessible
RewriteCond %{REQUEST_URI} ^/api/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^api/(.*)$ api/$1 [L]

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CORS for API endpoints and JSON files
    <FilesMatch "\.(php|json)$">
        Header set Access-Control-Allow-Origin "*"
        Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    </FilesMatch>
</IfModule>

# Disable directory browsing
Options -Indexes

# Default document
DirectoryIndex index.html index.php

# PHP settings
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_value max_execution_time 300
    php_value max_input_time 300
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Compress text files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
    AddOutputFilterByType DEFLATE application/javascript application/json
</IfModule>

# Protect sensitive files
<FilesMatch "^(schema\.sql|README\.md|\.env)$">
    Order allow,deny
    Deny from all
</FilesMatch>
